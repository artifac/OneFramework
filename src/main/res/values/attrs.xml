<resources>
  <declare-styleable name="ShapeImageView">
    <attr name="imageType">
      <enum name="none" value="0"/>
      <enum name="cycle" value="1"/>
      <enum name="round" value="2"/>
    </attr>
    <attr name="borderColor" format="color"/>
    <attr name="borderWidth" format="dimension"/>
    <attr name="rectRoundRadius" format="dimension"/>
  </declare-styleable>

  <declare-styleable name="TripButton">
    <attr format="dimension" name="radius"/>
    <attr format="color" name="enable_color"/>
    <attr format="color" name="disable_color"/>
    <attr format="color" name="text_color"/>
    <attr format="string" name="text"/>
    <attr format="dimension" name="text_size"/>
    <attr name="text_style">
      <enum name="normal" value="0"/>
      <enum name="body" value="1"/>
    </attr>
    <attr format="color" name="stroke_color"/>
    <attr format="dimension" name="stroke_width"/>
  </declare-styleable>

  <declare-styleable name="PullView">
    <attr name="scroll_view">
      <enum name="header" value="0"/>
      <enum name="self" value="1"/>
    </attr>
    <attr format="dimension" name="scroll_max_height"/>
    <attr name="header_view_id" format="reference"/>

    <attr name="resolve_conflict" format="boolean"/>
    <attr name="have_footer_view" format="boolean"/>
    <attr name="have_header_view" format="boolean"/>
  </declare-styleable>

  <declare-styleable name="MapCenterPinView">
    <attr name="pin_width" format="dimension"/>
    <attr name="pin_color" format="color"/>
    <attr name="pin_height" format="dimension"/>
    <attr name="pin_circle_size" format="dimension"/>
    <attr name="pin_circle_color" format="color"/>
    <attr name="pin_inner_circle_color" format="color"/>
  </declare-styleable>

  <declare-styleable name="LoadingView">
    <attr name="loading_type">
      <enum name="point" value="0"/>
      <enum name="progress" value="1"/>
    </attr>
    <attr name="loading_point_color" format="color|reference"/>
    <attr name="loading_point_normal_size" format="dimension"/>
    <attr name="loading_point_selector_size" format="dimension"/>
    <attr name="loading_point_count" format="integer"/>

    <attr name="loading_progress_type">
      <enum name="circle" value="2"/>
      <enum name="line" value="3"/>
    </attr>
    <attr name="loading_progress_color" format="color|reference"/>
    <attr name="loading_progress_width" format="dimension|reference"/>

  </declare-styleable>

  <declare-styleable name="WheelView">
    <attr name="itemVisibleNum" format="integer"/>
    <attr name="textColorOuter" format="color" />
    <attr name="textSizeOuter" format="dimension" />
    <attr name="textColorCenter" format="color" />
    <attr name="textSizeCenter" format="dimension" />
    <attr name="lineColor" format="color" />
    <attr name="isLoop" format="boolean"/>
    <attr name="lineSpaceDimens" format="dimension"/>
    <attr name="wheelGravity" format="enum" >
      <enum name="left" value="234"/>
      <enum name="center" value="354"/>
      <enum name="right" value="894"/>
    </attr>
  </declare-styleable>

  <declare-styleable name="StarView">
    <attr name="starViewNumber" format="integer"/>
    <attr name="starView_isSlide" format="boolean"/>
    <attr name="starViewWidth" format="dimension"/>
    <attr name="starViewHeight" format="dimension"/>
    <attr name="starViewRightMargin" format="dimension"/>
  </declare-styleable>

  <declare-styleable name="ScriptTextView">
    <attr name="script_color" format="color"/>
    <attr name="script_text" format="reference"/>
    <attr name="script_text_size" format="dimension"/>
    <attr name="script_direction" format="enum">
      <enum name="right" value="0"/>
      <enum name="left" value="1"/>
    </attr>
    <attr name="script_loc" format="enum">
      <enum name="top" value="0"/>
      <enum name="mid" value="1"/>
      <enum name="bottom" value="2"/>
    </attr>
  </declare-styleable>

  <!-- 自定义验证码输入框-->
  <declare-styleable name="verificationCodeView">
    <!--输入框的数量-->
    <attr name="vcv_et_number" format="integer" />
    <!--输入类型-->
    <attr name="vcv_et_inputType">
      <enum name="number" value="0" />
      <enum name="numberPassword" value="1" />
      <enum name="text" value="2" />
      <enum name="textPassword" value="3" />
    </attr>
    <!--输入框的宽度-->
    <attr name="vcv_et_width" format="dimension|reference" />
    <!--输入框文字颜色-->
    <attr name="vcv_et_text_color" format="color|reference" />
    <!--输入框文字大小-->
    <attr name="vcv_et_text_size" format="dimension|reference" />
    <!--输入框背景-->
    <attr name="vcv_et_bg" format="reference" />
    <!--光标样式-->
    <attr name="vcv_et_cursor" format="reference" />
  </declare-styleable>

  <declare-styleable name="ProgressView">
    <attr name="progress_from" format="integer"/>
    <attr name="progress_to" format="integer"/>
    <attr name="progress_width" format="dimension"/>
    <attr name="progress_bg" format="color"/>
    <attr name="progress_radius" format="dimension"/>
    <attr name="progress_foreground" format="reference"/>
    <attr name="progress_max_tick" format="integer"/>
  </declare-styleable>

  <declare-styleable name="BlurLayout">
    <attr name="blk_downscaleFactor" format="float" />
    <attr name="blk_blurRadius" format="integer" />
    <attr name="blk_fps" format="integer" />
    <attr name="blk_cornerRadius" format="dimension" />
  </declare-styleable>
</resources>