<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape
      android:shape="rectangle">
      <solid android:color="#f3f3f3"/>
      <corners android:radius="4dp"/>
    </shape>
  </item>
  <item>
    <shape
      android:shape="rectangle">
      <solid android:color="@android:color/white"/>
      <corners android:radius="4dp"/>
    </shape>
  </item>
</selector>