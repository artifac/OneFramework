<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/one_invite_background"
  android:clickable="true"
  android:fitsSystemWindows="true">

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitCenter"
    android:src="@drawable/one_invite_bg"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/invite_top_margin"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="40dp"
      android:layout_marginRight="40dp"
      android:layout_centerHorizontal="true"
      android:background="@drawable/one_invite_detail_bg"
      android:orientation="vertical">

      <TextView
        android:id="@+id/one_invite_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/one_invite_code_bg"
        android:gravity="center"
        android:textColor="#1665ff"
        android:textSize="@dimen/invite_code_size"/>

      <TextView
        android:id="@+id/one_invite_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="@dimen/invite_max_margin_bottom"
        android:gravity="center_horizontal"
        android:textColor="#373c43"
        android:textSize="14sp"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:background="@drawable/one_invite_separator"/>

      <!-- 邀请方式 -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/invite_share_margin_top"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <View
          android:layout_width="56dp"
          android:layout_height="1dp"
          android:layout_gravity="center_vertical"
          android:background="#e5e7e9"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:text="@string/one_invite_type"
          android:textColor="#373c43"
          android:textSize="14sp"/>

        <View
          android:layout_width="56dp"
          android:layout_height="1dp"
          android:layout_gravity="center_vertical"
          android:background="#e5e7e9"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/invite_share_margin_bottom"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/one_invite_wechat"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:drawablePadding="10dp"
          android:drawableTop="@drawable/share_wechat"
          android:gravity="center_horizontal"
          android:text="@string/platform_wechat_plat"
          android:textColor="#02040d"/>

        <TextView
          android:id="@+id/one_invite_sms"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:drawablePadding="10dp"
          android:drawableTop="@drawable/share_sms"
          android:gravity="center_horizontal"
          android:text="@string/platform_sms_plat"
          android:textColor="#02040d"/>

      </LinearLayout>

    </LinearLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:background="@drawable/one_invite_my_code"
      android:gravity="center_horizontal"
      android:text="@string/one_invite_my_code"
      android:textColor="@android:color/white"
      android:textSize="18sp"/>

  </RelativeLayout>

</FrameLayout>