<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@android:color/white"
  android:orientation="vertical">

  <include
    layout="@layout/one_bottom_dialog_title_bar_layout"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.one.framework.app.widget.wheelview.WheelView
      android:id="@+id/one_data_picker_time"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      app:wheelGravity="right"/>

    <com.one.framework.app.widget.wheelview.WheelView
      android:id="@+id/one_data_picker_hour"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="5"
      app:wheelGravity="center"/>

    <com.one.framework.app.widget.wheelview.WheelView
      android:id="@+id/one_data_picker_minute"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      app:wheelGravity="left"/>

  </LinearLayout>


</LinearLayout>