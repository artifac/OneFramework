<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:orientation="vertical">

  <com.one.framework.app.widget.ShapeImageView
    android:id="@+id/one_navigator_options_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/one_navigator_grid_background"
    android:gravity="center"
    android:scaleType="center"
    android:src="@drawable/one_navigator_grid_orders"/>

  <TextView
    android:id="@+id/one_navigator_options_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:text="grip text"
    android:gravity="center_horizontal"/>
</LinearLayout>