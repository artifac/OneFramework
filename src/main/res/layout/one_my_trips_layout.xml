<com.one.framework.app.widget.PullScrollRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/one_my_trips_parent_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f3f3f3">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.one.framework.app.widget.LoadingView
      android:id="@+id/one_my_trips_refresh_loading"
      android:layout_width="match_parent"
      android:layout_height="5dp"
      app:loading_type="progress"
      app:loading_progress_color="#f05b48"
      app:loading_progress_type="line"
      app:loading_progress_width="5dp"
      app:loading_line_start="center"/>

    <com.one.framework.app.widget.PullListView
      android:id="@android:id/list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:cacheColorHint="@android:color/transparent"
      android:listSelector="@android:color/transparent"
      app:have_header_view="false"
      app:scroll_max_height="50dp"
      app:scroll_view="self"/>

    <com.one.framework.app.widget.EmptyView
      android:id="@+id/empty_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      android:gravity="center"/>
  </LinearLayout>

</com.one.framework.app.widget.PullScrollRelativeLayout>